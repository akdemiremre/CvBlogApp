@model CvBlog.Entities.Dtos.CategoryUpdateDto
<div class="modal fade" id="categoryUpdateModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">@Model.Name Adlı Kategoriyi Güncelleme Formu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Controller daki ModelState.IsValid değerini buraya aktardık. -->
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
                <input hidden="true" asp-for="Id" />
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control my-input-control" asp-for="Name" placeholder="Kategori adı giriniz..." />
                    </div>
                    <span class="text-danger ml-3" asp-validation-for="Name"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control my-input-control" asp-for="Description" placeholder="Kategori açıklamasını giriniz..." />
                    </div>
                    <span class="text-danger ml-3" asp-validation-for="Description"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="Note" class="col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input class="form-control my-input-control" asp-for="Note" placeholder="Kategoriye özel not giriniz..." />
                    </div>
                    <span class="text-danger ml-3" asp-validation-for="Note"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="IsActive" class="form-check-label col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input type="checkbox" class="border-checkbox form-check-input" asp-for="IsActive" />
                    </div>
                    <span class="text-danger ml-3" asp-validation-for="IsActive"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="IsDeleted" class="form-check-label col-sm-4 col-form-label"></label>
                    <div class="col-sm-8">
                        <input type="checkbox" class="border-checkbox form-check-input" asp-for="IsDeleted" />
                    </div>
                    <span class="text-danger ml-3" asp-validation-for="IsDeleted"></span>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Vazgeç</button>
                <button type="button" class="btn btn-primary" id="categoryUpdateButton">Kaydet</button>
            </div>
        </div>
    </div>
</div>