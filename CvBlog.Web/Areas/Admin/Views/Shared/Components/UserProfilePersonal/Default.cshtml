                                                <td>
                                                <div class="input-group">
                                                <span class="input-group-addon" asp-for="Picture"><i class="icofont icofont-user"></i></span>
                                                <input asp-for="Picture" type="hidden" />
                                                <img class="my-image" src="~/img/@Model.Picture" alt="@Model.UserName" />
                                                </div>
                                                </td>
                                                </tr>
                                                <tr>
                                                <td>
                                                <div class="input-group">
                                                <span class="input-group-addon" asp-for="UserName"><i class="icofont icofont-user"></i></span>
                                                <span class="text-danger" asp-asp-validation-for="PictureFile">
                                                </div>
                                                </td>
                                                </tr> *@
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- end of table col-lg-6 -->
                                    <div class="col-lg-6">
                                        <table class="table">
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="LastName"><i class="icofont icofont-boy"></i></span>
                                                            <input asp-for="LastName" type="text" class="form-control" placeholder="Lütfen, soyadınızı giriniz.">
                                                            <span class="text-danger" asp-asp-validation-for="Email">
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="UserName"><i class="icofont icofont-user"></i></span>
                                                            <input asp-for="UserName" type="text" class="form-control" placeholder="Lütfen, E-Posta adresi giriniz.">
                                                            <span class="text-danger" asp-asp-validation-for="UserName">
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="PhoneNumber"><i class="icofont icofont-mobile-phone"></i></span>
                                                            <input asp-for="PhoneNumber" type="text" class="form-control" placeholder="Lütfen, telefon numarası giriniz.">
                                                            <span class="text-danger" asp-validation-for="PhoneNumber"></span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="WebsiteLink"><i class="icofont icofont-earth"></i></span>
                                                            <input asp-for="WebsiteLink" type="text" class="form-control" placeholder="Lütfen, Website adresinizi giriniz.">
                                                            <span class="text-danger" asp-validation-for="WebsiteLink"></span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="LinkedInLink"><i class="icofont icofont-social-linkedin"></i></span>
                                                            <input asp-for="LinkedInLink" type="text" class="form-control" placeholder="Lütfen, LinkedIn adresinizi giriniz.">
                                                            <span class="text-danger" asp-validation-for="LinkedInLink"></span>
                                                        </div>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <div class="input-group">
                                                            <span class="input-group-addon" asp-for="GitHubLink"><i class="icofont icofont-social-github"></i></span>
                                                            <input asp-for="GitHubLink" type="text" class="form-control" placeholder="Lütfen, GitHub adresinizi giriniz.">
                                                            <span class="text-danger" asp-validation-for="GitHubLink"></span>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <!-- end of table col-lg-6 -->
                                </div>
                                <!-- end of row -->
