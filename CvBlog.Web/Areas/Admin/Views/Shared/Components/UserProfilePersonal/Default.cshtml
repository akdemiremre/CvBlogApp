                                <!-- end of row -->
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary waves-effect waves-light m-r-20" id="profilePersonalUpdateButton">Güncelle</button>
                                </div>
                            </div>
                            <!-- end of edit info -->
                        </form>
                    </div>
                    <!-- end of col-lg-12 -->
                </div>
                <!-- end of row -->
            </div>
            <!-- end of edit-info -->
        </div>
        <!-- end of card-block -->
    </div>
    
    <!-- personal card end-->
</div>
