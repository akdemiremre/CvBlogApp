@model CvBlog.Entities.Dtos.UserAddDto
<div class="modal fade" id="userAddModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Kullanıcı Ekleme Formu</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="Add" id="form-user-add">
                    <!-- Controller daki ModelState.IsValid değerini buraya aktardık. -->
                    <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                    <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display:none;"></div>
                    <div class="form-group row">
                        <label asp-for="FirstName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control my-input-control" asp-for="FirstName" placeholder="İsim giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="FirstName"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="LastName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control my-input-control" asp-for="LastName" placeholder="Soyisim giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="LastName"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="UserName" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control my-input-control" asp-for="UserName" placeholder="Kullanıcı Adı giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="UserName"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Email" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control my-input-control" asp-for="Email" placeholder="E-Posta adresi giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="Email"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Password" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="password" class="form-control my-input-control" asp-for="Password" placeholder="Şifre giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="Password"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PhoneNumber" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control my-input-control" asp-for="PhoneNumber" placeholder="Gsm giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="PhoneNumber"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="PictureFile" class="col-sm-4 col-form-label"></label>
                        <div class="col-sm-8">
                            <input type="file" accept="image/*" class="form-control my-input-control" asp-for="PictureFile" placeholder="Gsm giriniz..." />
                        </div>
                        <span class="text-danger ml-3" asp-validation-for="PictureFile"></span>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-outline-danger" data-dismiss="modal"><i class="icofont icofont-ui-close"></i>Vazgeç</button>
                <button type="button" class="btn btn-success btn-outline-success" id="userAddButton"><i class="icofont icofont-check-circled"></i>Kaydet</button>
            </div>
        </div>
    </div>
</div>